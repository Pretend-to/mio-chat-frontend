// .oxlintrc.json
{
  "extends": ["recommended-vue3"], // 继承 Vue 3 推荐规则，这是一个很好的起点
  "rules": {
    // 自定义规则覆盖或添加
    // "no-console": "warn",
    "no-unused-vars": "warn",
    "oxc-no-undef": "error", // Oxlint 规则通常以 `oxc-` 开头
    "oxc-vue/no-unused-components": "warn", // Oxlint 对 Vue 插件的实现
    "oxc-vue/component-name-in-template-casing": ["warn", "PascalCase"]
  }
}
